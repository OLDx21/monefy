<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/layout_root"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="10dp" >


<RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
            android:id="@+id/date"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    </TextView>
    <View
            android:layout_below="@+id/date"
            android:id="@+id/line1"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/background_dark" />
    <EditText
            android:maxLength="9"
            android:textSize="25dp"

            android:gravity="center"
            android:background="@drawable/customtextview"
            android:id="@+id/textview2"
            android:textColor="@color/white"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="70dp" tools:ignore="TextViewEdits">


    </EditText>
    <Button
            android:id="@+id/delete"
            android:stateListAnimator="@null"
            android:foregroundTint="#FFFFFF"
            android:background="@drawable/customtextview"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/textview2"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/textview2"
            android:foreground="@android:drawable/ic_input_delete">

    </Button>
</RelativeLayout>

<LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button

                android:id="@+id/btn1"
                android:layout_margin="3dp"
                android:stateListAnimator="@null"
                android:background="@drawable/calccustom"
                android:text="1"
                android:textSize="25dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

        </Button>
        <Button
                android:id="@+id/btn2"
                android:layout_margin="3dp"
                android:stateListAnimator="@null"
                android:background="@drawable/calccustom"
                android:text="2"
                android:textSize="25dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

        </Button>
        <Button
                android:id="@+id/btn3"
                android:layout_margin="3dp"
                android:stateListAnimator="@null"
                android:background="@drawable/calccustom"
                android:text="3"
                android:textSize="25dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

        </Button>

    </LinearLayout>
    <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/btn4"
                android:layout_margin="3dp"
                android:stateListAnimator="@null"
                android:background="@drawable/calccustom"
                android:text="4"
                android:textSize="25dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

        </Button>
        <Button
                android:id="@+id/btn5"
                android:layout_margin="3dp"
                android:stateListAnimator="@null"
                android:background="@drawable/calccustom"
                android:text="5"
                android:textSize="25dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

        </Button>

        <Button
                android:id="@+id/btn6"
                android:layout_margin="3dp"
                android:stateListAnimator="@null"
                android:background="@drawable/calccustom"
                android:text="6"
                android:textSize="25dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

        </Button>
    </LinearLayout>
    <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/btn7"
                android:layout_margin="3dp"
                android:stateListAnimator="@null"
                android:background="@drawable/calccustom"
                android:text="7"
                android:textSize="25dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

        </Button>

        <Button
                android:id="@+id/btn8"
                android:layout_margin="3dp"
                android:stateListAnimator="@null"
                android:background="@drawable/calccustom"
                android:text="8"
                android:textSize="25dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

        </Button>
        <Button
                android:id="@+id/btn9"
                android:layout_margin="3dp"
                android:stateListAnimator="@null"
                android:background="@drawable/calccustom"
                android:text="9"
                android:textSize="25dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

        </Button>
    </LinearLayout>
    <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/btnpoint"
                android:layout_margin="3dp"
                android:stateListAnimator="@null"
                android:background="@drawable/calccustom"
                android:text="."
                android:textSize="25dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

        </Button>

        <Button
                android:id="@+id/btn0"
                android:layout_margin="3dp"
                android:stateListAnimator="@null"
                android:background="@drawable/calccustom"
                android:text="0"
                android:textSize="25dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

        </Button>
        <Button
                android:id="@+id/btnravno"
                android:layout_margin="3dp"
                android:stateListAnimator="@null"
                android:background="@drawable/calccustom"
                android:text="="
                android:textSize="25dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

        </Button>
    </LinearLayout>
    <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/selectedbtn"
                android:layout_margin="3dp"
                android:stateListAnimator="@null"
                android:background="@drawable/calccustom"
                android:text=""
                android:textSize="18dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

        </Button>



    </LinearLayout>


</LinearLayout>



</LinearLayout>